{
    "server": {
        "host": "0.0.0.0",
        "port": 8443,
        "threads": 10,
        "ssl": {
            "enabled": true,
            "certificate": "config/ssl/server.crt",
            "private_key": "config/ssl/server.key",
            "ca_certificate": "config/ssl/ca.crt",
            "verify_mode": "relaxed"
        },
        "max_connections": 10000,
        "timeout": 30000,
        "keep_alive": true,
        "compression": {
            "enabled": true,
            "level": 6,
            "min_size": 1024
        }
    },
    "database": {
        "type": "sqlite",
        "connection_string": "data/fileserver.db",
        "pool_size": 20,
        "timeout": 5000,
        "auto_create": true,
        "backup": {
            "enabled": true,
            "interval": 3600,
            "retention": 7
        }
    },
    "storage": {
        "backend": "local",
        "base_path": "data/files",
        "temp_path": "data/temp",
        "max_file_size": "1073741824",
        "max_total_size": "107374182400",
        "allowed_extensions": ["*"],
        "chunk_size": 8388608,
        "deduplication": {
            "enabled": true,
            "algorithm": "sha256"
        },
        "versioning": {
            "enabled": true,
            "max_versions": 10
        }
    },
    "security": {
        "jwt": {
            "secret": "your-secret-key-here-change-in-production",
            "issuer": "FileServer",
            "audience": "FileServerUsers", 
            "expiry": 86400,
            "refresh_expiry": 604800
        },
        "password": {
            "bcrypt_rounds": 12,
            "min_length": 8,
            "require_uppercase": true,
            "require_lowercase": true,
            "require_numbers": true,
            "require_symbols": false
        },
        "rate_limit": {
            "enabled": true,
            "requests_per_minute": 1000,
            "burst_size": 100,
            "cleanup_interval": 300
        },
        "cors": {
            "enabled": true,
            "allowed_origins": ["*"],
            "allowed_methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
            "allowed_headers": ["*"],
            "max_age": 86400
        }
    },
    "logging": {
        "level": "info",
        "console": {
            "enabled": true,
            "format": "[%Y-%m-%d %H:%M:%S.%e] [%l] %v"
        },
        "file": {
            "enabled": true,
            "path": "logs/server.log",
            "max_size": 10485760,
            "max_files": 5,
            "format": "[%Y-%m-%d %H:%M:%S.%e] [%^%l%$] [thread %t] %v"
        },
        "json": {
            "enabled": false,
            "path": "logs/server.json"
        }
    },
    "metrics": {
        "enabled": true,
        "prometheus": {
            "enabled": false,
            "port": 9090,
            "path": "/metrics"
        },
        "collection_interval": 60,
        "retention_days": 30
    },
    "cache": {
        "enabled": true,
        "type": "memory",
        "max_size": 134217728,
        "ttl": 3600,
        "cleanup_interval": 300
    },
    "search": {
        "enabled": true,
        "index_path": "data/search_index",
        "update_interval": 300,
        "max_results": 1000
    }
}